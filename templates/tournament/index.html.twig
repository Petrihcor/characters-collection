{% extends 'base.html.twig' %}

{% block title %}Hello TournamentController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    {% if characters %}
        {% for character in characters %}
            <p>{{ character.name }}</p>
        {% endfor %}
    {% else %}
        <p>Эта лига пуста</p>
    {% endif %}

    <h2>Быстрый турнир</h2>
    <p>Выбери статы</p>
    <form method="post" action="{{ path('fastTournament', {id: id}) }}">
        <label><input type="checkbox" name="stats[]" value="intelligence"> Интеллект</label>
        <label><input type="checkbox" name="stats[]" value="strength"> Сила</label>
        <label><input type="checkbox" name="stats[]" value="agility"> Ловкость</label>
        <label><input type="checkbox" name="stats[]" value="specialPowers"> Особые умения</label>
        <label><input type="checkbox" name="stats[]" value="fightingSkills"> Бойцовские навыки</label>
        <button type="submit">Запустить турнир</button>
    </form>

    <h2>Турнир по раундам</h2>
    <p>Выбери статы</p>
    <form method="post" action="{{ path('tournament', {id: id}) }}">
        <label><input type="checkbox" name="stats[]" value="intelligence"> Интеллект</label>
        <label><input type="checkbox" name="stats[]" value="strength"> Сила</label>
        <label><input type="checkbox" name="stats[]" value="agility"> Ловкость</label>
        <label><input type="checkbox" name="stats[]" value="specialPowers"> Особые умения</label>
        <label><input type="checkbox" name="stats[]" value="fightingSkills"> Бойцовские навыки</label>
        <button type="submit">Запустить турнир</button>
    </form>
</div>
{% endblock %}
