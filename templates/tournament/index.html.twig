{% extends 'base.html.twig' %}

{% block title %}Hello TournamentController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    {% if characters %}
        {% for character in characters %}
            <p>{{ character.name }}</p>
        {% endfor %}
    {% else %}
        <p>Эта лига пуста</p>
    {% endif %}

    <h2>Выбери статы</h2>
    <form method="post" action="{{ path('fastTournament', {id: id}) }}">
        <label><input type="checkbox" name="stats[]" value="intelligence"> Интеллект</label>
        <label><input type="checkbox" name="stats[]" value="strength"> Сила</label>
        <label><input type="checkbox" name="stats[]" value="agility"> Ловкость</label>
        <label><input type="checkbox" name="stats[]" value="speed"> Скорость</label>
        <label><input type="checkbox" name="stats[]" value="stamina"> Выносливость</label>
        <button type="submit">Запустить турнир</button>
    </form>
    <ul>
        <li><a href="{{ path('tournament_start', {id: id, stat: 'strength'}) }}">Сила</a></li>
        <li><a href="{{ path('tournament_start', {id: id, stat: 'agility'}) }}">Ловкость</a></li>
        <li><a href="{{ path('tournament_start', {id: id, stat: 'intelligence'}) }}">Интеллект</a></li>
    </ul>
</div>
{% endblock %}
