{% extends 'base.html.twig' %}

{% block title %}Hello TournamentController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    {% if characters %}
        {% for character in characters %}
            <p>{{ character.name }}</p>
        {% endfor %}
    {% else %}
        <p>Эта лига пуста</p>
    {% endif %}

    <h2>Выбери статы</h2>
    <form action="">
            <div>
                <input type="radio" id="contactChoice1" name="intelligence" value="email" />
                <label for="contactChoice1">Интеллект</label>

                <input type="radio" id="contactChoice2" name="strength" value="phone" />
                <label for="contactChoice2">Сила</label>

                <input type="radio" id="contactChoice3" name="agility" value="mail" />
                <label for="contactChoice3">Ловкость</label>

                <input type="radio" id="contactChoice3" name="special_powers" value="mail" />
                <label for="contactChoice3">Особые умения</label>

                <input type="radio" id="contactChoice3" name="fighting_skills" value="mail" />
                <label for="contactChoice3">Бойцовские навыки</label>
            </div>
        <input type="submit" value="Быстрый расчет">
    </form>
    <ul>
        <li><a href="{{ path('tournament_start', {id: id, stat: 'strength'}) }}">Сила</a></li>
        <li><a href="{{ path('tournament_start', {id: id, stat: 'agility'}) }}">Ловкость</a></li>
        <li><a href="{{ path('tournament_start', {id: id, stat: 'intelligence'}) }}">Интеллект</a></li>
    </ul>
</div>
{% endblock %}
