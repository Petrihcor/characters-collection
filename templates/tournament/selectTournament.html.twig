{% extends 'base.html.twig' %}

{% block title %}Стат "{{ stat }}"{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <div class="example-wrapper">
        <h2>Стат "{{ stat }}" персонажей</h2>

        {% if characters %}
            <ul>
                {% for character in characters %}
                    <li>{{ character.name }}: {{ attribute(character, stat) }}</li>
                {% endfor %}
            </ul>
        {% else %}
            <p>В этой лиге нет персонажей</p>
        {% endif %}
        <a href="{{ path('tournament', {id: id, stat: stat}) }}">Начать турнир</a>
        <a href="{{ path('app_tournament', {id: id}) }}">Назад</a>
    </div>
{% endblock %}