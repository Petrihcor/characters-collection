{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Турниры</h1>
        <h2>Выбери лигу</h2>
        {% if leagues %}
            {% for league in leagues %}
                <div class="league-item">
                    <p>
                        <a href="{{ path('app_league', {'id': league.id}) }}">{{ league.name }}</a>
                        <a href="#" class="edit-toggle" data-target="form-{{ league.id }}">(ред.)</a>
                    </p>

                    <form id="form-{{ league.id }}" class="rename-form" action="{{ path('edit_league', {id: league.id}) }}" method="post">
                        <input type="text" name="name">
                        <button type="submit">Переименовать</button>
                    </form>
                </div>
            {% endfor %}
        {% else %}
            <p>Пока что лиги отсутствуют</p>
        {% endif %}
        <h2>Или создай турнир</h2>
        <a href="{{ path('create_custom_tournament') }}">Создать</a>
    </div>
{% endblock %}
